		<http:request method="GET" doc:name="Request" doc:id="bbcddfac-0441-4ad0-8143-34214ccae5f7" config-ref="HTTP_Request_IATA" responseTimeout="3000000" path="/airport">
			<http:headers ><![CDATA[#[output application/java
---
{
	"X-Rapidapi-Key" : attributes.headers.'x-rapidapi-key'
}]]]></http:headers>
			<http:query-params ><![CDATA[#[output application/java
---
{
	"iata" : attributes.queryParams.airport
}]]]></http:query-params>
		</http:request>
	</flow>
	<flow name="trainee-infoFlow" doc:id="188ae327-a824-4ca1-8e84-471496c76a8e" >
