		<db:select doc:name="Select" doc:id="e7a005c1-71e9-4928-a39b-3914e280c170" config-ref="Database_Config_Trainee">
			<db:sql ><![CDATA[SELECT * FROM trainees
WHERE airportiata = :param ]]></db:sql>
			<db:input-parameters ><![CDATA[#[{param: attributes.queryParams.airport}]]]></db:input-parameters>
		</db:select>
	</flow>
